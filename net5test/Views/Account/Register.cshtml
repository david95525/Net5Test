
@{
    ViewData["Title"] = "註冊頁面";
    if (TempData["message"] != null)
    {
        Console.WriteLine(TempData["message"]);
    }
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Register</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Register", "Account", new { returnUrl = Url.Action("Index", "Home") },
                         FormMethod.Post, null, new { id = "registerform", @class = "login-form fade-in-effect" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" name="email_reg" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control"  name="password_reg" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">ConfirmPassword</label>
                            <input type="password" class="form-control" name="confirmpassword" placeholder="ConfirmPassword">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Name">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>